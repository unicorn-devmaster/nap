{
  "restartable": false,
  "verbose": true,
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    ".next",
    "*.test.js",
    "*__",
    "coverage"
  ],
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "server",
    "graphql",
    "providers",
    "routes"
  ],
  "ext": "js json"
}